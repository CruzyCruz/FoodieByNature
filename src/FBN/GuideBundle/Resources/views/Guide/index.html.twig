{# src/FBN/GuideBundle/Resources/views/Guide/index.html.twig #}

{% extends "FBNGuideBundle::layout.html.twig" %}

{% block title %}
{% endblock %}

{% block body %}
<ul>
  {% for article in lastarticles %}
  	{% if article.class | lower ~ 's' =='infos' %}
  		<a href="{{ path('fbn_guide_articles', {'articles': article.class | lower ~ 's'} ) }}#{{ article.slug }}">{{ article.nom }}</a>  		
  	{% else %}
  		<a href="{{ path('fbn_guide_' ~ article.class | lower ~ 's', {'slug': article.slug} ) }}">{{ article.nom }}</a>
  	{% endif %} 
	<br />
    {% if article.image is not null %}
      <img 
        src="{{ asset( article.image.webPath | imagine_filter('thumb_outbound') ) }}"
        alt="{{ article.nom }}"
      />
    {% endif %}    
    <hr />    
  {% else %}
    <p>PAS D'ARTICLES</p>
  {% endfor %}
</ul>	
{% endblock %}
