{% set bookmarkAdd = 'AJOUTER AUX FAVORIS' %}
{% set bookmarkRemove = 'RETIRER DES FAVORIS' %}  

{% if bookmarkAction == 'add' %}
  {% set  text = bookmarkAdd %}    
{% else %}
  {% set  text = bookmarkRemove %}
{% endif %}

<button id="bookmark" data-path="{{path('fbn_guide_favoris_manage')}}" data-bookmark-entite="{{entite}}" data-bookmark-entite-id="{{entiteId}}" data-bookmark-action="{{bookmarkAction}}" data-bookmark-id="{{bookmarkId}}" data-bookmark-add="{{bookmarkAdd}}" data-bookmark-remove="{{bookmarkRemove}}">
  {{ text }}
</button>